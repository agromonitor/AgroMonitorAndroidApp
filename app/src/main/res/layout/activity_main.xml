<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username"
        android:id="@+id/TVusername"
        android:textColor="@android:color/black"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:id="@+id/TFusername"
        android:textColor="#f9aa22"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TVusername"
        android:layout_alignParentLeft="true"
        android:enabled="true"
        android:editable="true"
        android:phoneNumber="false"
        android:nestedScrollingEnabled="true"
        android:password="true"
        android:contextClickable="true"
        android:inputType="textVisiblePassword|textPassword"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password"
        android:id="@+id/TVpassword"
        android:textColor="@android:color/black"
        android:layout_below="@+id/TFusername"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/TFpassword"
        android:editable="true"
        android:clickable="true"
        android:contextClickable="true"
        android:enabled="true"
        android:nestedScrollingEnabled="true"
        android:password="true"
        android:phoneNumber="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TVpassword"
        android:layout_alignParentLeft="true"
        android:textColor="#f9aa22" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/Blogin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/TFpassword"
        android:visibility="visible"
        android:textSize="35dp"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="false"
        android:backgroundTint="#ffbd63"
        android:elevation="@android:dimen/thumbnail_width"
        android:textColor="@android:color/black"
        android:clickable="true"
        android:contextClickable="true"
        android:enabled="true" />

    <ImageView
        android:layout_width="424dp"
        android:layout_height="201dp"
        android:id="@+id/imageView"
        android:background="@mipmap/logowhite"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/TVErrorMessage"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_red_light"
        android:textSize="12dp" />
</RelativeLayout>
